<div class="card">
    <div class="card-header">
        <i data-lucide="files"></i>
        <h2>Workspace Explorer</h2>
    </div>
    <ul class="file-list">
        <% files.forEach(file => { %>
            <li>
                <div style="display:flex; align-items: center; gap: 12px;">
                    <i data-lucide="<%= file.isDirectory ? 'folder' : 'file-text' %>" style="width:18px; color: var(--text-secondary);"></i>
                    <span><%= file.name %></span>
                </div>
                <div class="subtext"><%= file.size %></div>
            </li>
        <% }); %>
    </ul>
</div>

<style>
    .file-list li {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 8px;
    }
    .file-list li:hover {
        background: rgba(255,255,255,0.03);
        border-radius: 8px;
    }
</style>
