<%- include('partials/header') %>

    <h2>File Explorer (/data/.openclaw/workspace)</h2>
    <div class="card">
        <ul class="file-list">
            <% files.forEach(function(file) { %>
                <li style="display: flex; justify-content: space-between; padding: 5px 0; border-bottom: 1px solid #eee;">
                    <div>
                        <% if (file.isDirectory) { %>
                            <span class="dir-icon">üìÅ</span>
                            <strong><%= file.name %>/</strong>
                        <% } else { %>
                            <span class="dir-icon">üìÑ</span>
                            <%= file.name %>
                        <% } %>
                    </div>
                    <div style="color: #999; font-size: 0.8em;">
                        <%= file.isDirectory ? '-' : (file.size / 1024).toFixed(1) + ' KB' %>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>

<%- include('partials/footer') %>
