<div class="grid" style="grid-template-columns: 1fr;">
    <div class="card">
        <div class="card-header">
            <i data-lucide="brain"></i>
            <h2>Long-Term Memory</h2>
        </div>
        <div class="memory-content">
            <%- longTerm %>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <i data-lucide="scroll"></i>
            <h2>Today's Activity Log</h2>
        </div>
        <div class="memory-content">
            <%- today %>
        </div>
    </div>
</div>

<style>
    .memory-content h1, .memory-content h2 { color: var(--accent-color); font-size: 1.2rem; margin-top: 24px; }
    .memory-content p { color: var(--text-primary); }
    .memory-content ul { list-style: disc; padding-left: 20px; margin-bottom: 16px; }
    .memory-content li { border: none; padding: 4px 0; }
</style>
